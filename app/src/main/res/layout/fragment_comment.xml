<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/home_must_see_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Must see "
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />


        <ListView
            android:id="@+id/mustseeattractions_list_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </ListView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <com.pnikosis.materialishprogress.ProgressWheel
            android:id="@+id/home_progress_wheel"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            app:matProg_barColor="@color/colorPrimary"
            app:matProg_circleRadius="60dp"
            app:matProg_progressIndeterminate="true" />

        <TextView
            android:id="@+id/home_statusInfoLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/home_progress_wheel"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="Please Retry"
            android:textColor="@color/red"
            android:textSize="20dp"
            tools:textColor="@color/red" />


    </LinearLayout>


</RelativeLayout>




